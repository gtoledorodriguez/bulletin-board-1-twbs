<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card ">
      <div class="card-header d-flex align-items-center">
      <h1 class="h6">All boards</h1>
        
        <button type="button" class="btn btn-sm btn-outline-success ms-auto" data-bs-toggle="modal" data-bs-target="#myModal">
          Add a new board
        </button>
      </div>
      <ul class="list-group list-group-flush">
        <% @list_of_boards.each do |a_board| %>
          <li class="list-group-item d-flex">
            <a href="/boards/<%= a_board.id %>">
              <%= a_board.name %>
            </a>
            <i class="fa-solid fa-chevron-right ms-auto"></i>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">New board</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/insert_board" method="post">
          <div class="mb-3">
            <label class="form-label" for="name_box">
              Name
            </label>

            <input class = "form-control" type="text" id="name_box" name="query_name">
          </div>

          <div class="d-grid">
            <button class="btn btn-success">
              Add board
            </button>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
